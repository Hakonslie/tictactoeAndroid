<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="150dp">

    <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_gametimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="44dp"/>


    <LinearLayout
            android:id="@+id/linear_layout_vs_text"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">
        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_player_one"
                android:textSize="30sp"
                android:gravity="center"
        />
        <TextView
                android:text="vs"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_player_vs"
                android:textSize="40sp"
                android:gravity="center"
        />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_game_player_two"
            android:textSize="30sp"
            android:gravity="center"
    />
    </LinearLayout>
    <TableLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_vs_text" android:id="@+id/tableLayout"
        android:layout_marginTop="10dp">

        <TableRow android:layout_width="100dp" android:layout_height="200dp">
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid1" android:background="#2ab" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid2" android:background="#ab2" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid3" android:background="#b5a" android:textSize="50sp" android:text="@string/empty_column"/>
        </TableRow>
        <TableRow android:layout_width="100dp" android:layout_height="200dp">
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid4" android:background="#b5a" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid5" android:background="#2ab" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid6" android:background="#ab2" android:textSize="50sp" android:text="@string/empty_column"/>
        </TableRow>
        <TableRow android:layout_width="100dp" android:layout_height="200dp">
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid7" android:background="#ab2" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid8" android:background="#b5a" android:textSize="50sp" android:text="@string/empty_column"/>
            <TextView android:layout_width="100dp" android:layout_height="66dp" android:gravity="center"
                      android:id="@+id/grid9" android:background="#2ab" android:textSize="50sp" android:text="@string/empty_column"/>
        </TableRow>
        <TableRow android:layout_width="100dp" android:layout_height="200dp">
            <TextView
                    android:text="@string/restart_game"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_gravity="end"
                    android:id="@+id/tv_game_restart"
                    android:textSize="15sp"
                    android:layout_column="2"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_game_end"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="invisible"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.26"
    />


</android.support.constraint.ConstraintLayout>