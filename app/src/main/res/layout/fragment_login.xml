<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText
            android:id="@+id/player_one_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/player_two_name"
            app:layout_constraintStart_toStartOf="@+id/player_two_name"
            android:hint="@string/player_number_one_login_hint"
            android:inputType="textPersonName"
            android:gravity="center_horizontal"
            android:maxLength="7"
            app:layout_constraintBottom_toTopOf="@+id/player_two_name"/>

    <EditText
            android:id="@+id/player_two_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/btn_from_login"
            app:layout_constraintStart_toStartOf="@+id/btn_from_login"
            android:hint="@string/player_number_two_login_hint"
            android:gravity="center_horizontal"
            android:maxLength="7"
            app:layout_constraintBottom_toTopOf="@+id/btn_from_login"/>

    <Button
            android:text="@string/button_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_from_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#b5a"
            android:textColor="@android:color/white"/>
    <CheckBox
            android:text="play vs AI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_checkbox_ai" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />


</android.support.constraint.ConstraintLayout>